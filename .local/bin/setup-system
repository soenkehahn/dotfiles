getInstalledPackages :: IO [String]
getInstalledPackages = do
  Stdout output <- cmd "dpkg -l"
  return $ parse output
  where
    parse =
      lines >>>
      map (stripPrefix "ii  ") >>>
      catMaybes >>> map (splitOneOf " :" >>> headMay) >>> catMaybes

installCustom :: IO ()
installCustom = do
  unit $ cmd (Cwd ".local/custom") "./install.sh"
