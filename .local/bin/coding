#!/usr/bin/env run-cargo-script
// cargo-deps: regex="1.1.0"

use std::process::Command;
use std::thread::sleep;
use std::time::Duration;

type R<A> = Result<A, Box<std::error::Error>>;

fn wait_for<F>(f: F) -> R<()>
where
    F: Fn() -> R<bool>,
{
    let mut done = false;
    while !done {
        done = f()?;
        sleep(Duration::from_millis(50));
    }
    Ok(())
}

fn wait_for_change<F>(action: F) -> R<()>
where
    F: Fn() -> R<()>,
{
    let old = get_active_window()?;
    action()?;
    wait_for(|| {
        let new = get_active_window()?;
        Ok(new != old)
    })?;
    Ok(())
}

fn get_active_window() -> R<String> {
    run("xdotool", vec!["getactivewindow"])
}

fn run(command: &str, args: Vec<&str>) -> R<String> {
    Ok(
        String::from_utf8(Command::new(command).args(args).output()?.stdout)?
            .trim()
            .to_string(),
    )
}

fn i3_msg(command: &str) -> R<()> {
    let result = run("i3-msg", vec![command])?;
    if result != "[{\"success\":true}]" {
        panic!("{:#?}", result);
    }
    Ok(())
}

fn main() -> R<()> {
    let pwd = run("pwd", vec![])?;

    i3_msg("layout tabbed")?;
    wait_for_change(|| i3_msg("exec firefox"))?;
    i3_msg("move left")?;
    i3_msg("split toggle")?;
    i3_msg("layout tabbed")?;
    i3_msg("focus right")?;
    i3_msg("split toggle")?;
    i3_msg("layout splith")?;
    wait_for_change(|| i3_msg(&format!("exec atom -n {}", pwd)))?;
    i3_msg("move left")?;
    i3_msg("resize set 70 ppt 0")?;
    i3_msg("focus right")?;
    i3_msg("split toggle")?;
    i3_msg("layout splitv")?;
    wait_for_change(|| {
        i3_msg(&format!("exec konsole --workdir {}", pwd))?;
        Ok(())
    })?;
    i3_msg("focus up")?;
    i3_msg("focus parent")?;
    i3_msg("focus parent")?;
    i3_msg("layout tabbed")?;
    wait_for_change(|| i3_msg(&format!("exec konsole --workdir {}", pwd)))?;
    i3_msg("focus left")?;
    i3_msg("focus left")?;
    Ok(())
}
