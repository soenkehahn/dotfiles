#!/usr/bin/env -S rust-script --cargo-output --
//! ```cargo
//! [dependencies]
//! cradle = "=0.0.11"
//! dirs = "=3.0.2"
//! ```

use cradle::*;

fn main() {
    let colortheme = std::env::args().skip(1).next().unwrap();
    let apps = &[
        "alacritty",
        "i3",
        "desktop-background",
        "nvim",
        "rofi",
        "firefox",
    ];
    for i in apps {
        cmd_unit!(
            LogCommand,
            CurrentDir(dirs::home_dir().unwrap()),
            format!("./.config/{}/set-colortheme", i),
            &colortheme
        );
    }
}
