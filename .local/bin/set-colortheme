#!/usr/bin/env -S rust-script --toolchain-version stable --
//! ```cargo
//! [dependencies]
//! cradle = "=0.0.11"
//! dirs = "=3.0.2"
//! ```

use cradle::*;

fn main() {
    let colortheme = std::env::args().skip(1).next().unwrap();
    let apps = &[
        "alacritty",
        "firefox",
        "nvim",
        "rofi",
        "sway",
        "swaylock",
        "Code",
    ];
    for i in apps {
        let colortheme_clone = colortheme.clone();
        cmd_unit!(
            LogCommand,
            CurrentDir(dirs::home_dir().unwrap()),
            format!("./.config/{}/set-colortheme", i),
            colortheme_clone,
        )
    }
}
