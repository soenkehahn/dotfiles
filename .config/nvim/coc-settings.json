{
  "coc.preferences.formatOnSave": false,
  "diagnostic.enableMessage": "jump",
  "diagnostic.messageTarget": "float",
  "inlayHint.enable": false,
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--logfile", "/home/shahn/hls.log", "--lsp"],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": ["haskell", "lhaskell"],
      "settings": {
        "formatOnSave": false,
        "haskell": {
          // "checkProject": true,
          "plugin": {
            "hlint": {
              "globalOn": true
            }
          }
        }
      }
    },
    "nix": {
      "command": "nil",
      "filetypes": ["nix"],
      "rootPatterns": ["flake.nix"],
      "settings": {
        "nil": {
          "formatting": { "command": ["nixpkgs-fmt"] },
          "nix": {
            "flake": {
              "autoArchive": true
            }
          }
        }
      }
    }
  }
}
